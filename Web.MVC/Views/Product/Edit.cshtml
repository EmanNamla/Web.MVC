@model ProductDto

@{
    ViewData["Title"] = "Edit Product";
    var categories = new SelectList(CA.GetAllAsync().Result, "Id", "Name");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Edit Product</h2>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Product">Back to List</a>
    </div>

    <form asp-action="Edit" method="post" class="mt-4">
       

        <partial name="_PartialViews/_CreateAndEditPartial" />

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 
