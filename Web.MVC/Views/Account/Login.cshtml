@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@model LoginDto

<h2>Login</h2>
<form asp-controller="Account" asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="validation-summary" ></div>
    <label for="email">Email:</label>
    <input type="email" asp-for="Email" placeholder="Email" required />
    <span asp-validation-for="Email"></span>

    <label for="password">Password:</label>

        <input type="password" asp-for="Password" id="registerPassword" placeholder="Password" required />

        <span asp-validation-for="Password" ></span>

    <button type="submit">Login</button>
</form>

<p>Don't have an account? <a asp-controller="Account" asp-action="Register">Register</a></p>
